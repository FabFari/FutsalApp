<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dip" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <!--  ListRow Left sied Thumbnail image -->
        <LinearLayout android:id="@+id/thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dip"
            android:layout_alignParentLeft="true"
            android:background="@drawable/image_bg"
            android:layout_marginRight="5dip">

            <ImageView
                android:id="@+id/campo_logo"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:src="@drawable/campo"
                android:background="@color/color_primary"
                />

        </LinearLayout>

        <!-- Nome Campo -->
        <TextView
            android:id="@+id/campo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_primary_dark"
            android:textSize="25dip"
            android:textStyle="bold"
            android:layout_marginTop="1dip"
            android:layout_toRightOf="@+id/thumbnail"
            android:text="Nome Campo"
            android:layout_gravity="center_horizontal|center_vertical" />

        <!-- Campo City -->
        <TextView
            android:id="@+id/campo_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/campo_name"
            android:layout_below="@id/campo_name"
            android:text="CittÃ : "
            android:layout_marginRight="5dip"
            android:textSize="20dip"
            android:textColor="@color/color_primary"
            android:layout_gravity="bottom|right" />

        <!-- Campo Price -->
        <TextView
            android:id="@+id/campo_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/campo_city"
            android:layout_alignParentRight="true"
            android:text="Prezzo: "
            android:layout_marginRight="5dip"
            android:textSize="20dip"
            android:textColor="@color/color_primary"
            android:layout_gravity="bottom|right" />

    </RelativeLayout>

</android.support.v7.widget.CardView>