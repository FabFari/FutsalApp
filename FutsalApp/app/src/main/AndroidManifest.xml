<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pde2015.futsalapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.DesignDemo" >

        <!-- Per Sign-In Google -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".activities.SplashscreenActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NoActionBarTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginRegistratiActivity"
            android:label="@string/title_activity_login_registrati"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NoActionBarTheme" >
        </activity>
        <activity
            android:name=".activities.RegistrazioneActivity"
            android:label="@string/title_activity_registrazione"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.PrincipaleActivity"
            android:label="@string/title_activity_principale"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
