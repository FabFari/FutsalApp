<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.pde2015.futsalapp.activities.RegistrazioneActivity">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="fill_horizontal|fill_vertical"
            android:id="@+id/lin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completa la registrazione!"
                android:textSize="25dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/color_primary_dark"
                android:textStyle="bold"
                android:id="@+id/textView3"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:id="@+id/immagine"
                android:layout_width="200dp"
                android:layout_height="170dp"
                android:src="@drawable/place_holder"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_below="@+id/textView3"
                android:elevation="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome:"
                android:textColor="@color/color_primary_dark"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp"
                android:id="@+id/nome"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/insertNome"
                android:paddingLeft="10dp"
                android:textColor="@color/color_primary"
                android:hint="Inserisci nome"
                android:textColorHint="@color/color_primary"
                android:layout_below="@+id/nome"
                android:inputType="textCapSentences"
                android:imeOptions="actionNext"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:id="@+id/email"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/color_primary_dark"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_primary"
                android:hint="Inserisci la tua email"
                android:textColorHint="@color/color_primary"
                android:paddingLeft="10dp"
                android:id="@+id/insertEmail"
                android:layout_below="@+id/email"
                android:inputType="textEmailAddress"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefono:"
                android:textColor="@color/color_primary_dark"
                android:id="@+id/telefono"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_primary"
                android:hint="Inserisci il tuo telefono"
                android:textColorHint="@color/color_primary"
                android:inputType="phone"
                android:paddingLeft="10dp"
                android:id="@+id/insertTelefono"
                android:layout_below="@+id/email"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ruolo Preferito:"
                android:textColor="@color/color_primary_dark"
                android:id="@+id/ruolo"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <Spinner
                android:id="@+id/ruoli_spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

    <com.github.rahatarmanahmed.cpv.CircularProgressView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/progress_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        app:cpv_animAutostart="true"
        app:cpv_indeterminate="true"
        app:cpv_color="@color/color_primary"
        android:visibility="gone"/>

</RelativeLayout>
