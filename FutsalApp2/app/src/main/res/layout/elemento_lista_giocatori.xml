<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.Android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dip" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/elemento_lista_giocatori_user_pic"
            android:layout_width="62dip"
            android:layout_height="62dip"
            android:src="@drawable/user_button"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!-- User Name -->
        <TextView
            android:id="@+id/elemento_lista_giocatori_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/elemento_lista_giocatori_user_pic"
            android:textColor="@color/color_primary_dark"
            android:textSize="20dip"
            android:textStyle="bold"
            android:text="Nome Giocatore"
            android:paddingTop="10dp"
            android:paddingLeft="5dp"
            android:layout_centerHorizontal="true" />

        <!-- Email -->
        <TextView
            android:id="@+id/elemento_lista_giocatori_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_primary"
            android:textSize="20dip"
            android:text="Email Giocatore"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingBottom="10dp"
            android:layout_below="@+id/elemento_lista_giocatori_username"
            android:layout_toRightOf="@+id/elemento_lista_giocatori_user_pic"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>