<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.Android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dip" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <!-- Mittente -->
        <TextView
            android:id="@+id/voto_from_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_primary_dark"
            android:textSize="25dip"
            android:textStyle="bold"
            android:layout_marginTop="5dip"
            android:layout_marginLeft="5dip"
            android:text="Da:"
            android:layout_gravity="left|top" />
        <TextView
            android:id="@+id/voto_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_primary"
            android:textSize="20dip"
            android:text="emailMittente@gmail.com"
            android:paddingLeft="2dp"
            android:layout_alignBottom="@+id/voto_from_head"
            android:layout_toRightOf="@+id/voto_from_head" />
        <!--Destinatario -->
        <TextView
            android:id="@+id/voto_to_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_primary_dark"
            android:textSize="25dip"
            android:textStyle="bold"
            android:layout_marginTop="5dip"
            android:layout_marginLeft="5dip"
            android:text="A:"
            android:layout_below="@+id/voto_from_head"
            android:layout_gravity="left|top" />
        <TextView
            android:id="@+id/voto_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_primary"
            android:textSize="20dip"
            android:text="emailDestinatario@gmail.com"
            android:paddingLeft="2dp"
            android:layout_alignBottom="@+id/voto_to_head"
            android:layout_toRightOf="@+id/voto_to_head"
            android:layout_toEndOf="@+id/voto_to_head" />
        <!--Commento -->
        <TextView
            android:id="@+id/voto_comment_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_primary_dark"
            android:textSize="25dip"
            android:textStyle="bold"
            android:layout_marginTop="5dip"
            android:layout_marginLeft="5dip"
            android:text="Commento:"
            android:layout_below="@+id/voto_to_head"
            android:layout_gravity="left|top" />
        <TextView
            android:id="@+id/voto_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:textColor="@color/color_primary"
            android:textSize="20dip"
            android:text="&lt;&lt;Corpo commento&gt;&gt;"
            android:layout_below="@+id/voto_comment_head"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>