<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.Android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dip" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/elemento_classifica_user_pic"
            android:layout_width="62dip"
            android:layout_height="62dip"
            android:layout_centerVertical="true"
            android:src="@drawable/user_button" />

        <!-- User Name -->
        <TextView
            android:id="@+id/elemento_classifica_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_primary_dark"
            android:textSize="25dip"
            android:textStyle="bold"
            android:text="Nome Giocatore"
            android:layout_toRightOf="@+id/elemento_classifica_user_pic"
            android:paddingTop="5dp"
            android:paddingLeft="2dp" />

        <!-- You View - nell'elemento associato all'utente che sta visualizzando, comparirÃ  "Tu" -->
        <TextView
            android:id="@+id/elemento_classifica_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:textSize="20dip"
            android:textColor="@color/color_primary"
            android:layout_gravity="bottom|right"
            android:layout_alignBottom="@+id/elemento_classifica_voti"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <!-- Voti View -->
        <TextView
            android:id="@+id/elemento_classifica_voti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Votato da: "
            android:paddingTop="2dp"
            android:paddingLeft="2dp"
            android:paddingBottom="5dp"
            android:textSize="20dip"
            android:textColor="@color/color_primary"
            android:layout_below="@+id/elemento_classifica_username"
            android:layout_toRightOf="@+id/elemento_classifica_user_pic"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>